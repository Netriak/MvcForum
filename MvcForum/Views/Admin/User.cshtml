@model AdminUpdateUser
           
@section Head {
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

@{
    ViewBag.Title = "Update User Account";    
}

<div id="informational">
        <h3>Use the form below to update the account</h3>
        You need only fill in the fields that are to be changed.
    </div>
    @using (Html.BeginForm()) 
    { 
        @Html.ValidationSummary(true, "The new information is invalid. Please correct the errors and try again.") 
        @Html.AntiForgeryToken()
        <div class="infoentry">
                <div class="entry">
                    @Html.Label("Reg_Username", String.Format("Name: {0}", Model.OldUserName))
                    @Html.TextBoxFor(m => m.Reg_Username, new { maxlength = 25 })
                    @Html.ValidationMessageFor(m => m.Reg_Username) 
                </div>
                        
                <div class="entry">
                    @Html.Label("Reg_Email", String.Format("Email: {0}", Model.OldEmail)) 
                    @Html.TextBoxFor(m => m.Reg_Email, new { maxlength = 70 })
                    @Html.ValidationMessageFor(m => m.Reg_Email) 
                </div>
                        
                <div class="entry">
                    @Html.LabelFor(m => m.Reg_Password) 
                    @Html.PasswordFor(m => m.Reg_Password, new { maxlength = 100 })
                    @Html.ValidationMessageFor(m => m.Reg_Password) 
                </div>
                
                <div class="entry">
                    @Html.LabelFor(m => m.ConfirmPassword) 
                    @Html.PasswordFor(m => m.ConfirmPassword, new { maxlength = 100 })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword) 
                </div>

                <input type="submit" value="Update" />
        </div>
    } 
